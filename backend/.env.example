# Example environment variables for Backend
# Copy this file to .env and update with your values

# Server Configuration
NODE_ENV=development
PORT=5000

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/Uthra
# For MongoDB Atlas (cloud):
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/Uthra?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# Twilio Configuration (IVR & SMS)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number
TWILIO_TWIML_APP_SID=your_twiml_app_sid

# SMS Gateway
SMS_PROVIDER=twilio
GUPSHUP_API_KEY=your_gupshup_api_key

# File Upload
MAX_FILE_SIZE=5242880
FILE_UPLOAD_PATH=./public/uploads

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_EMAIL=your_email@gmail.com
SMTP_PASSWORD=your_email_password
FROM_EMAIL=noreply@uthra.com
FROM_NAME=Uthra Platform

# Frontend URL
FRONTEND_URL=http://localhost:3000

# IVR Configuration
IVR_MAX_RETRY_ATTEMPTS=5
IVR_RETRY_INTERVAL_HOURS=2
IVR_TOLL_FREE_NUMBER=1800-XXX-XXXX

# System Configuration
DEFAULT_LANGUAGE=tamil
SUPPORTED_LANGUAGES=english,tamil,hindi,telugu,kannada

# Request Configuration
REQUEST_DEFAULT_EXPIRY_HOURS=48
AUTO_EXPIRE_CHECK_INTERVAL_MINUTES=30

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
